<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Demo Contact: Propriétaire -->
        <record id="partner_owner_demo" model="res.partner">
            <field name="name">Jean Dupont (Propriétaire)</field>
            <field name="email">proprietaire@demo.com</field>
            <field name="phone">+223 99 00 11 22</field>
            <field name="street">Rue du Marché</field>
            <field name="city">Bamako</field>
            <field name="country_id" ref="base.ml"/>
        </record>

        <!-- Demo Contact: Locataire -->
        <record id="partner_tenant_demo" model="res.partner">
            <field name="name">Marie Martin (Locataire)</field>
            <field name="email">locataire@demo.com</field>
            <field name="phone">+223 88 22 33 44</field>
            <field name="street">Rue de la Paix</field>
            <field name="city">Bamako</field>
            <field name="country_id" ref="base.ml"/>
        </record>

        <!-- Demo Portal User: Propriétaire -->
        <record id="portal_user_owner" model="res.users">
            <field name="name">Propriétaire SOYA</field>
            <field name="login">proprietaire</field>
            <field name="email">proprietaire@demo.com</field>
            <field name="partner_id" ref="partner_owner_demo"/>
            <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
            <field name="active">True</field>
        </record>

        <!-- Demo Portal User: Locataire -->
        <record id="portal_user_tenant" model="res.users">
            <field name="name">Locataire SOYA</field>
            <field name="login">locataire</field>
            <field name="email">locataire@demo.com</field>
            <field name="partner_id" ref="partner_tenant_demo"/>
            <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
            <field name="active">True</field>
        </record>

        <!-- Demo Property for Owner -->
        <record id="property_demo_owner" model="soya.property">
            <field name="name">Appartement 3 Chambres - Badalabougou Portal</field>
            <field name="owner_id" ref="partner_owner_demo"/>
            <field name="property_type_id" ref="property_type_appartement"/>
            <field name="expected_price">50000000</field>
            <field name="quarter">badalabougou</field>
            <field name="city">Bamako</field>
            <field name="living_area">120</field>
            <field name="land_area">500</field>
            <field name="bedrooms">3</field>
            <field name="bathrooms">2</field>
            <field name="toilets">3</field>
            <field name="has_garage">true</field>
            <field name="has_garden">true</field>
            <field name="furnished">true</field>
            <field name="state">rented</field>
            <field name="rent_price">750000</field>
            <field name="rental_deposit">2250000</field>
        </record>

        <!-- Demo Base Contract -->
        <record id="base_contract_demo" model="soya.base.contract">
            <field name="name">BC-PORTAL-2025-001</field>
            <field name="property_id" ref="property_demo_owner"/>
            <field name="landlord_id" ref="partner_owner_demo"/>
            <field name="start_date">2025-01-15</field>
            <field name="end_date">2026-01-15</field>
            <field name="state">active</field>
        </record>

        <!-- Demo Rental Contract -->
        <record id="rental_contract_demo" model="soya.rental.contract">
            <field name="base_contract_id" ref="base_contract_demo"/>
            <field name="tenant_id" ref="partner_tenant_demo"/>
            <field name="monthly_rent">750000</field>
            <field name="deposit_amount">2250000</field>
            <field name="duration_months">12</field>
        </record>

        <!-- Demo Document -->
        <record id="document_demo_contract" model="soya.contract.document">
            <field name="name">Contrat de Location - Appartement Badalabougou</field>
            <field name="contract_id" ref="rental_contract_demo"/>
            <field name="document_type">contrat_location</field>
            <field name="document_filename">contrat_location_2025.pdf</field>
            <field name="document_file"></field>
        </record>

        <!-- Demo Portal Ticket -->
        <record id="portal_ticket_demo" model="soya.portal.ticket">
            <field name="partner_id" ref="partner_tenant_demo"/>
            <field name="subject">Problème d'électricité dans la cuisine</field>
            <field name="description">Bonjour, j'ai un problème d'électricité dans la cuisine. Deux prises ne fonctionnent pas. Pourriez-vous envoyer un électricien?</field>
            <field name="category">technical</field>
            <field name="priority">high</field>
            <field name="state">open</field>
            <field name="contract_id" ref="rental_contract_demo"/>
        </record>

    </data>
</odoo>
