<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =========================================== -->
    <!-- TYPES DE BIENS PRÉDÉFINIS POUR LE MALI -->
    <!-- =========================================== -->
    
    <record id="property_type_villa_demo" model="soya.property.type">
        <field name="name">Villa (Démo)</field>
        <field name="code">VIL_DEMO</field>
        <field name="category">residential</field>
        <field name="sequence">10</field>
        <field name="sales_commission_rate">5.0</field>
        <field name="rental_commission_rate">1.0</field>
        <field name="default_living_area">150</field>
        <field name="default_bedrooms">3</field>
        <field name="default_bathrooms">2</field>
        <field name="requires_land_title">1</field>
    </record>

    <record id="property_type_appartement" model="soya.property.type">
        <field name="name">Appartement</field>
        <field name="code">APP</field>
        <field name="category">residential</field>
        <field name="sequence">20</field>
        <field name="sales_commission_rate">4.0</field>
        <field name="rental_commission_rate">1.0</field>
        <field name="default_living_area">80</field>
        <field name="default_bedrooms">2</field>
        <field name="default_bathrooms">1</field>
        <field name="requires_land_title">1</field>
    </record>

    <record id="property_type_terrain" model="soya.property.type">
        <field name="name">Terrain</field>
        <field name="code">TER</field>
        <field name="category">land</field>
        <field name="sequence">30</field>
        <field name="sales_commission_rate">8.0</field>
        <field name="rental_commission_rate">0.0</field>
        <field name="is_rentable">0</field>
        <field name="default_living_area">0</field>
        <field name="requires_land_title">1</field>
    </record>

    <!-- =========================================== -->
    <!-- PROPRÉTAIRES DE DÉMONSTRATION -->
    <!-- =========================================== -->

    <record id="res_partner_diarra" model="res.partner">
        <field name="name">Moussa Diarra</field>
        <field name="company_type">person</field>
        <field name="type">contact</field>
        <field name="email">moussa.diarra@email.ml</field>
        <field name="phone">+223 76 45 32 10</field>
        <field name="city">Bamako</field>
        <field name="country_id" ref="base.ml"/>
    </record>

    <record id="res_partner_traore" model="res.partner">
        <field name="name">Aïcha Traoré</field>
        <field name="company_type">person</field>
        <field name="type">contact</field>
        <field name="email">aicha.traore@email.ml</field>
        <field name="phone">+223 65 12 34 56</field>
        <field name="city">Bamako</field>
        <field name="country_id" ref="base.ml"/>
    </record>

    <!-- =========================================== -->
    <!-- BIENS IMMOBILIERS DE DÉMONSTRATION -->
    <!-- =========================================== -->

    <record id="property_villa_badalabougou" model="soya.property">
        <field name="name">VIL-001</field>
        <field name="property_type_id" ref="property_type_villa_demo"/>
        <field name="owner_id" ref="res_partner_diarra"/>
        <field name="expected_price">85000000</field>
        <field name="rent_price">450000</field>
        <field name="state">new</field>
        <field name="living_area">180</field>
        <field name="bedrooms">4</field>
        <field name="bathrooms">3</field>
        <field name="furnished">1</field>
        <field name="has_garage">1</field>
        <field name="land_title_status">certified</field>
        <field name="quarter">badalabougou</field>
    </record>

    <record id="property_appartement_aci" model="soya.property">
        <field name="name">APP-001</field>
        <field name="property_type_id" ref="property_type_appartement"/>
        <field name="owner_id" ref="res_partner_traore"/>
        <field name="expected_price">45000000</field>
        <field name="rent_price">275000</field>
        <field name="state">new</field>
        <field name="living_area">95</field>
        <field name="bedrooms">3</field>
        <field name="furnished">1</field>
        <field name="land_title_status">certified</field>
        <field name="quarter">aci2000</field>
    </record>

    <!-- =========================================== -->
    <!-- CLIENTS/ACHETEURS DE DÉMONSTRATION -->
    <!-- =========================================== -->

    <record id="res_partner_etc" model="res.partner">
        <field name="name">Entreprise Togolaise de Commerce</field>
        <field name="company_type">company</field>
        <field name="type">contact</field>
        <field name="email">direction@etc.tg</field>
        <field name="city">Lomé</field>
        <field name="country_id" ref="base.tg"/>
    </record>

    <record id="res_partner_keita" model="res.partner">
        <field name="name">Fatoumata Keita</field>
        <field name="company_type">person</field>
        <field name="type">contact</field>
        <field name="email">fatou.keita@email.ml</field>
        <field name="city">Bamako</field>
        <field name="country_id" ref="base.ml"/>
    </record>

    <!-- =========================================== -->
    <!-- CONTRATS DE DÉMONSTRATION -->
    <!-- =========================================== -->

    <!-- Contrat de Location -->
    <record id="demo_rental_contract_1" model="soya.rental.contract">
        <field name="name">LOC-2024-001</field>
        <field name="property_id" ref="property_appartement_aci"/>
        <field name="tenant_id" ref="res_partner_keita"/>
        <field name="landlord_id" ref="res_partner_traore"/>
        <field name="monthly_rent">260000</field>
        <field name="start_date">2024-02-01</field>
        <field name="duration_months">24</field>
        <field name="state">active</field>
    </record>

    <!-- Contrat de Vente -->
    <record id="demo_sale_contract_1" model="soya.sale.contract">
        <field name="name">VENTE-2024-001</field>
        <field name="property_id" ref="property_villa_badalabougou"/>
        <field name="buyer_id" ref="res_partner_etc"/>
        <field name="landlord_id" ref="res_partner_diarra"/>
        <field name="sale_price">82000000</field>
        <field name="payment_terms">installment_3</field>
        <field name="state">waiting_signature</field>
    </record>

     <!-- Avenant pour augmentation de loyer -->
    <record id="demo_amendment_1" model="soya.contract.amendment">
        <field name="contract_id" ref="demo_rental_contract_1"/>
        <field name="amendment_type">rent_increase</field>
        <field name="amendment_date">2024-06-01</field>
        <field name="effective_date">2024-07-01</field>
        <field name="description">Augmentation de loyer conformément à l'indice des loyers. Ancien loyer: 260,000 FCFA, Nouveau loyer: 275,000 FCFA</field>
        <field name="old_value">260000</field>
        <field name="new_value">275000</field>
        <field name="state">signed</field>
    </record>

    <!-- Avenant pour prolongation de durée -->
    <record id="demo_amendment_2" model="soya.contract.amendment">
        <field name="contract_id" ref="demo_rental_contract_1"/>
        <field name="amendment_type">duration_extension</field>
        <field name="amendment_date">2024-11-01</field>
        <field name="effective_date">2025-02-01</field>
        <field name="description">Prolongation du contrat de location pour 12 mois supplémentaires</field>
        <field name="old_value">24</field>
        <field name="new_value">36</field>
        <field name="state">draft</field>
    </record>

    <!-- =========================================== -->
    <!-- OFFRES DE DÉMONSTRATION -->
    <!-- =========================================== -->

    <record id="property_offer_1" model="soya.property.offer">
        <field name="property_id" ref="property_villa_badalabougou"/>
        <field name="partner_id" ref="res_partner_etc"/>
        <field name="price">80000000</field>
        <field name="state">draft</field>
        <field name="date_deadline">2024-12-31</field>
    </record>

    <record id="property_offer_2" model="soya.property.offer">
        <field name="property_id" ref="property_appartement_aci"/>
        <field name="partner_id" ref="res_partner_keita"/>
        <field name="price">44000000</field>
        <field name="state">accepted</field>
        <field name="date_deadline">2024-11-30</field>
    </record>

</odoo>
