<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- =========================================== -->
        <!-- TYPES DE BIENS PRÉDÉFINIS POUR LE MALI -->
        <!-- =========================================== -->
        
        <record id="property_type_villa_demo" model="soya.property.type">
            <field name="name">Villa (Démo)</field>
            <field name="code">VIL_DEMO</field>
            <field name="category">residential</field>
            <field name="sequence">10</field>
            <field name="sales_commission_rate">5.0</field>
            <field name="rental_commission_rate">1.0</field>
            <field name="default_living_area">150</field>
            <field name="default_bedrooms">3</field>
            <field name="default_bathrooms">2</field>
            <field name="requires_land_title">True</field>
            <field name="description">
Villa de standing avec jardin et garage. 
Très demandée dans les quartiers résidentiels de Bamako.
Caractéristiques typiques : surface 150-300m², 3-5 chambres, jardin, garage.
            </field>
        </record>

        <record id="property_type_appartement" model="soya.property.type">
            <field name="name">Appartement</field>
            <field name="code">APP</field>
            <field name="category">residential</field>
            <field name="sequence">20</field>
            <field name="sales_commission_rate">4.0</field>
            <field name="rental_commission_rate">1.0</field>
            <field name="default_living_area">80</field>
            <field name="default_bedrooms">2</field>
            <field name="default_bathrooms">1</field>
            <field name="max_floors">5</field>
            <field name="requires_land_title">True</field>
            <field name="description">
Appartement en immeuble, idéal pour jeunes professionnels et petites familles.
Marché très dynamique à Bamako, particulièrement à ACI 2000 et Badalabougou.
            </field>
        </record>

        <record id="property_type_terrain" model="soya.property.type">
            <field name="name">Terrain</field>
            <field name="code">TER</field>
            <field name="category">land</field>
            <field name="sequence">30</field>
            <field name="sales_commission_rate">8.0</field>
            <field name="rental_commission_rate">0.0</field>
            <field name="is_rentable">False</field>
            <field name="default_living_area">0</field>
            <field name="requires_land_title">True</field>
            <field name="description">
Terrain constructible, très demandé pour projets immobiliers.
Nécessite un titre foncier certifié. Zones prisées : Niamakoro, Sabalibougou.
            </field>
        </record>

        <record id="property_type_commercial" model="soya.property.type">
            <field name="name">Local Commercial</field>
            <field name="code">COM</field>
            <field name="category">commercial</field>
            <field name="sequence">40</field>
            <field name="sales_commission_rate">6.0</field>
            <field name="rental_commission_rate">1.5</field>
            <field name="default_living_area">50</field>
            <field name="requires_land_title">True</field>
            <field name="description">
Local commercial pour boutiques, bureaux ou activités commerciales.
Fort potentiel dans les zones commerciales comme Hippodrome et ACI 2000.
            </field>
        </record>

        <record id="property_type_bureau" model="soya.property.type">
            <field name="name">Bureau</field>
            <field name="code">BUR</field>
            <field name="category">office</field>
            <field name="sequence">50</field>
            <field name="sales_commission_rate">4.0</field>
            <field name="rental_commission_rate">1.2</field>
            <field name="default_living_area">30</field>
            <field name="requires_land_title">True</field>
            <field name="description">
            Bureau pour professionnels et entreprises.
            Demande croissante avec le développement des affaires à Bamako.
            </field>
        </record>

