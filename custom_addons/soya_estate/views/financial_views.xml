<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- =========================================== -->
        <!-- VUES POUR FACTURES FINANCIÈRES -->
        <!-- =========================================== -->

        <!-- Vue Arbre Factures -->
        <record id="view_financial_invoice_tree" model="ir.ui.view">
            <field name="name">soya.financial.invoice.tree</field>
            <field name="model">soya.financial.invoice</field>
            <field name="arch" type="xml">
                <tree string="Factures Financières" decoration-danger="is_overdue == True" decoration-warning="state == 'sent'" decoration-success="state == 'paid'" decoration-muted="state == 'draft'">
                    <field name="name" string="Référence"/>
                    <field name="invoice_type" string="Type"/>
                    <field name="partner_id" string="Client"/>
                    <field name="property_id" string="Bien"/>
                    <field name="total_amount" string="Montant TTC"/>
                    <field name="invoice_date" string="Date Facture"/>
                    <field name="due_date" string="Échéance"/>
                    <field name="is_overdue" invisible="1"/>
                    <field name="overdue_days" string="Jours Retard" invisible="1"/>
                    <field name="state" widget="badge" string="État"/>
                    <field name="payment_date" string="Date Paiement"/>
                </tree>
            </field>
        </record>

        <!-- Vue Recherche Factures -->
        <record id="view_financial_invoice_search" model="ir.ui.view">
            <field name="name">soya.financial.invoice.search</field>
            <field name="model">soya.financial.invoice</field>
            <field name="arch" type="xml">
                <search string="Rechercher Factures">
                    <field name="name" string="Référence"/>
                    <field name="partner_id" string="Client"/>
                    <field name="property_id" string="Bien"/>
                    <field name="invoice_type" string="Type de Facture"/>
                    
                    <filter string="Factures Envoyées" name="sent" domain="[('state','=','sent')]"/>
                    <filter string="Factures Payées" name="paid" domain="[('state','=','paid')]"/>
                    <filter string="Factures En Retard" name="overdue" domain="[('is_overdue','=',True)]"/>
                    <filter string="Quittances de Loyer" name="rent" domain="[('invoice_type','=','rent')]"/>
                    <filter string="Factures de Charges" name="charges" domain="[('invoice_type','=','charge')]"/>
                    <filter string="Ce Mois" name="this_month" domain="[('invoice_date','>=',(context_today().replace(day=1).strftime('%Y-%m-%d')))]"/>
                    
                    <group expand="0" string="Regrouper par">
                        <filter string="Par Type" name="group_type" context="{'group_by': 'invoice_type'}"/>
                        <filter string="Par État" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Par Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Par Mois" name="group_month" context="{'group_by': 'invoice_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue Formulaire Facture -->
        <record id="view_financial_invoice_form" model="ir.ui.view">
            <field name="name">soya.financial.invoice.form</field>
            <field name="model">soya.financial.invoice</field>
            <field name="arch" type="xml">
                <form string="Facture Financière">
                    <header>
                        <button name="action_validate_invoice" type="object" string="Valider et Envoyer" invisible="state != 'draft'" class="btn-primary"/>
                        <button name="action_mark_paid" type="object" string="Marquer comme Payée" invisible="state not in ['sent','overdue']" class="btn-success"/>
                        <button name="action_cancel_invoice" type="object" string="Annuler" invisible="state in ['paid','cancelled']" class="btn-danger"/>
                        <button name="action_generate_penalty" type="object" string="Générer Pénalité" invisible="is_overdue == False" class="btn-warning"/>
                        <!-- BOUTON IMPRESSION -->
                        <button name="action_print_invoice" type="object" string="Imprimer" class="btn-info" invisible="invoice_type != 'rent'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,overdue,paid,cancelled" class="oe_statusbar"/>
                        
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Référence de la facture..." class="oe_inline"/>
                            </h1>
                            <div class="oe_float_right">
                                <field name="invoice_type" widget="radio" options="{'horizontal': true}"/>
                            </div>
                        </div>
                        
                        <group>
                            <group string="Informations Générales">
                                <field name="contract_id" options="{'no_create': True}" required="1"/>
                                <field name="partner_id" required="1"/>
                                <field name="property_id" readonly="1"/>
                                <field name="state"/>
                            </group>
                            
                            <group string="Période de Facturation">
                                <field name="period_start" required="1"/>
                                <field name="period_end" required="1"/>
                                <field name="invoice_date" required="1"/>
                                <field name="due_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Montants">
                            <group string="Détails Financiers">
                                <field name="amount" required="1"/>
                                <field name="tax_amount" readonly="1"/>
                                <field name="total_amount" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            
                            <group string="Paiement">
                                <field name="payment_date"/>
                                <label for="overdue_days" string="Retard"/>
                                <div>
                                    <field name="overdue_days" readonly="1"/>
                                    <span> jours</span>
                                </div>
                                <field name="is_overdue" invisible="1"/>
                            </group>
                        </group>
                        
                        <div invisible="is_overdue == False" class="alert alert-danger" role="alert">
                            <strong>Attention :</strong> Cette facture est en retard de 
                            <field name="overdue_days" readonly="1" class="oe_inline"/> jours
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Kanban Factures -->
        <record id="view_financial_invoice_kanban" model="ir.ui.view">
            <field name="name">soya.financial.invoice.kanban</field>
            <field name="model">soya.financial.invoice</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="invoice_type"/>
                    <field name="partner_id"/>
                    <field name="total_amount"/>
                    <field name="state"/>
                    <field name="due_date"/>
                    <field name="is_overdue"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_title">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="partner_id"/>
                                    </div>
                                    <div t-if="record.invoice_type.raw_value" class="text-muted">
                                        <field name="invoice_type"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_content">
                                        <div class="float-left">
                                            <field name="total_amount" widget="monetary"/>
                                        </div>
                                        <div class="float-right">
                                            <span t-if="record.is_overdue.raw_value == True" class="badge badge-danger">En retard</span>
                                            <span t-elif="record.state.raw_value == 'paid'" class="badge badge-success">Payée</span>
                                            <span t-elif="record.state.raw_value == 'sent'" class="badge badge-warning">Envoyée</span>
                                            <span t-else="" class="badge badge-secondary">
                                                <field name="state"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

       
        <!-- =========================================== -->
        <!-- ACTIONS ET MENUS -->
        <!-- =========================================== -->

        <!-- Actions -->
        <record id="action_financial_invoice" model="ir.actions.act_window">
            <field name="name">Factures Financières</field>
            <field name="res_model">soya.financial.invoice</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_sent': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Gérer les factures financières
                </p>
                <p>
                    Créez et suivez les quittances de loyer, factures de charges et commissions.
                </p>
            </field>
        </record>

        

        <!-- Cron pour génération automatique des loyers -->
        <record id="ir_cron_generate_rent_invoices" model="ir.cron">
            <field name="name">SOYA - Génération automatique des quittances de loyer</field>
            <field name="model_id" ref="model_soya_rent_scheduler"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_monthly_rent_invoices()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron pour vérification des factures en retard -->
        <record id="ir_cron_check_overdue_invoices" model="ir.cron">
            <field name="name">SOYA - Vérification des factures en retard</field>
            <field name="model_id" ref="model_soya_financial_invoice"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_overdue_invoices()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
