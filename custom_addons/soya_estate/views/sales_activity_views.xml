<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sales Activity Tree View -->
        <record id="soya_sales_activity_tree_view" model="ir.ui.view">
            <field name="name">soya.sales.activity.tree</field>
            <field name="model">soya.sales.activity</field>
            <field name="arch" type="xml">
                <tree string="Activités Commerciales" decoration-success="completed" decoration-danger="is_overdue">
                    <field name="activity_date"/>
                    <field name="name"/>
                    <field name="activity_type"/>
                    <field name="salesperson_id"/>
                    <field name="prospect_id"/>
                    <field name="outcome"/>
                    <field name="completed"/>
                    <field name="next_action_date"/>
                    <field name="is_overdue" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Sales Activity Form View -->
        <record id="soya_sales_activity_form_view" model="ir.ui.view">
            <field name="name">soya.sales.activity.form</field>
            <field name="model">soya.sales.activity</field>
            <field name="arch" type="xml">
                <form string="Activité Commerciale">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Description de l'activité"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations Principales">
                                <field name="activity_date"/>
                                <field name="activity_type"/>
                                <field name="salesperson_id"/>
                                <field name="completed"/>
                            </group>
                            <group string="Résultat">
                                <field name="outcome"/>
                                <field name="duration"/>
                            </group>
                        </group>
                        <group string="Liens">
                            <field name="prospect_id"/>
                            <field name="property_id"/>
                            <field name="visit_id"/>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" nolabel="1" placeholder="Ajouter les détails de l'activité..."/>
                            </page>
                            <page string="Suivi" name="followup">
                                <group>
                                    <field name="next_action_date"/>
                                    <field name="is_overdue" invisible="1"/>
                                </group>
                                <field name="next_action" nolabel="1" placeholder="Description de la prochaine action..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Sales Activity Kanban View -->
        <record id="soya_sales_activity_kanban_view" model="ir.ui.view">
            <field name="name">soya.sales.activity.kanban</field>
            <field name="model">soya.sales.activity</field>
            <field name="arch" type="xml">
                <kanban string="Activités" default_group_by="activity_type">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="activity_date"/>
                    <field name="activity_type"/>
                    <field name="salesperson_id"/>
                    <field name="prospect_id"/>
                    <field name="outcome"/>
                    <field name="completed"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><span t-esc="record.name"/></strong>
                                    </div>
                                    <small class="text-muted"><t t-esc="record.activity_date"/></small>
                                </div>
                                <div class="o_kanban_record_body">
                                    <p t-if="record.prospect_id">Prospect: <strong><t t-esc="record.prospect_id"/></strong></p>
                                    <p>Résultat: <span t-esc="record.outcome"/></p>
                                </div>
                                <div class="o_kanban_record_footer">
                                    <small class="text-muted"><t t-esc="record.salesperson_id"/></small>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Sales Activity Search View -->
        <record id="soya_sales_activity_search_view" model="ir.ui.view">
            <field name="name">soya.sales.activity.search</field>
            <field name="model">soya.sales.activity</field>
            <field name="arch" type="xml">
                <search string="Rechercher Activités">
                    <field name="name"/>
                    <field name="salesperson_id"/>
                    <field name="prospect_id"/>
                    <field name="property_id"/>
                    <field name="activity_date"/>
                    <filter string="Appels" name="calls" domain="[('activity_type', '=', 'call')]"/>
                    <filter string="Réunions" name="meetings" domain="[('activity_type', '=', 'meeting')]"/>
                    <filter string="Emails" name="emails" domain="[('activity_type', '=', 'email')]"/>
                    <filter string="Visites" name="visits" domain="[('activity_type', '=', 'visit')]"/>
                    <filter string="Propositions" name="proposals" domain="[('activity_type', '=', 'proposal')]"/>
                    <filter string="À Faire" name="pending" domain="[('completed', '=', False)]"/>
                    <filter string="Complétées" name="done" domain="[('completed', '=', True)]"/>
                    <filter string="Positif" name="positive" domain="[('outcome', '=', 'positive')]"/>
                    <filter string="Négatif" name="negative" domain="[('outcome', '=', 'negative')]"/>
                    <filter string="Mes Activités" name="my_activities" domain="[('salesperson_id', '=', uid)]"/>
                    <filter string="En Retard" name="overdue" domain="[('next_action_date', '&lt;', context_today())]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Type" name="group_type" context="{'group_by': 'activity_type'}"/>
                        <filter string="Résultat" name="group_outcome" context="{'group_by': 'outcome'}"/>
                        <filter string="Agent" name="group_agent" context="{'group_by': 'salesperson_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'activity_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Sales Activity Action -->
        <record id="soya_sales_activity_action" model="ir.actions.act_window">
            <field name="name">Activités Commerciales</field>
            <field name="res_model">soya.sales.activity</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="soya_sales_activity_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Pas d'activités enregistrées
                </p>
                <p>
                    Suivez vos appels, réunions, visites et autres activités commerciales.
                </p>
            </field>
        </record>
    </data>  
</odoo>
