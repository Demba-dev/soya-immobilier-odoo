<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- === VUES POUR SOYA.PROPERTY.OFFER === -->
        
        <!-- Vue Arbre pour les Offres -->
        <record id="view_property_offer_tree" model="ir.ui.view">
            <field name="name">soya.property.offer.tree</field>
            <field name="model">soya.property.offer</field>
            <field name="arch" type="xml">
                <tree string="Offres Immobilières" decoration-success="state == 'accepted'" decoration-warning="state == 'submitted'" decoration-danger="state in ['refused', 'expired']">
                    <field name="name" string="Référence"/>
                    <field name="property_id"/>
                    <field name="partner_id"/>
                    <field name="offer_type"/>
                    <field name="price"/>
                    <field name="state" widget="badge"/>
                    <field name="offer_date"/>
                    <field name="expiry_date"/>
                    <field name="salesperson_id"/>
                </tree>
            </field>
        </record>

        <!-- Vue Recherche pour les Offres -->
        <record id="view_property_offer_search" model="ir.ui.view">
            <field name="name">soya.property.offer.search</field>
            <field name="model">soya.property.offer</field>
            <field name="arch" type="xml">
                <search string="Rechercher une Offre">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <filter string="Offres soumises" name="submitted" domain="[('state','=','submitted')]" />
                    <filter string="Offres acceptées" name="accepted" domain="[('state','=','accepted')]" />
                    <filter string="Offres expirées" name="expired" domain="[('state','=','expired')]" />
                    <filter string="Mes offres" name="my_offers" domain="[('salesperson_id','=',uid)]" />
                    <group expand="0" string="Group By">
                        <filter string="Par Type" name="group_offer_type" context="{'group_by': 'offer_type'}"/>
                        <filter string="Par Commercial" name="group_salesperson" context="{'group_by': 'salesperson_id'}"/>
                        <filter string="Par Statut" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue Formulaire pour les Offres -->
        <record id="view_property_offer_form" model="ir.ui.view">
            <field name="name">soya.property.offer.form</field>
            <field name="model">soya.property.offer</field>
            <field name="arch" type="xml">
                <form string="Offre Immobilière">
                    <header>
                        <button name="action_submit_offer" type="object" string="Soumettre" invisible="state != 'draft'" class="btn-primary"/>
                        <button name="action_accept_offer" type="object" string="Accepter" invisible="state != 'submitted'" class="btn-success"/>
                        <button name="action_refuse_offer" type="object" string="Refuser" invisible="state not in ['draft','submitted']" class="btn-danger"/>
                        <button name="action_cancel_offer" type="object" string="Annuler" invisible="state in ['accepted','refused','expired']" class="btn-outline-secondary"/>
                        <button name="action_reset_to_draft" type="object" string="Remettre en brouillon" invisible="state not in ['refused','cancelled','expired']" class="btn-outline-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,accepted,refused,expired,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="property_id" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="offer_type"/>
                                <field name="price"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Détails de l'Offre">
                                <group>
                                    <group>
                                        <field name="proposed_deposit"/>
                                        <field name="payment_terms"/>
                                    </group>
                                    <group>
                                        <field name="currency_id" readonly="1"/>
                                    </group>
                                </group>
                                <group invisible="state!='refused'">
                                    <field name="refusal_reason" placeholder="Raison du refus de l'offre..."/>
                                </group>
                            </page>
                            <page string="Dates et Validité">
                                <group>
                                    <group>
                                        <field name="offer_date"/>
                                        <field name="validity_days"/>
                                    </group>
                                    <group>
                                        <field name="expiry_date" readonly="1"/>
                                        <field name="is_expired" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Commission">
                                <group>
                                    <group>
                                        <field name="salesperson_id"/>
                                    </group>
                                    <group>
                                        <field name="commission_rate" readonly="1"/>
                                        <field name="commission_amount" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Informations de Location" invisible="offer_type!='rental'">
                                <group>
                                    <group>
                                        <field name="rental_duration"/>
                                        <field name="proposed_start_date"/>
                                    </group>
                                    <group>
                                        <field name="proposed_end_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour les Offres -->
        <record id="action_property_offer" model="ir.actions.act_window">
            <field name="name">Offres Immobilières</field>
            <field name="res_model">soya.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_submitted': 1}</field>
        </record>

        <!-- Menu pour les Offres -->
        <menuitem id="menu_property_offer" name="Offres" parent="menu_soya_estate_root" action="action_property_offer" sequence="30"/>
    </data>
</odoo>
