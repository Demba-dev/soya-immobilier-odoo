<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bank_reconciliation_tree" model="ir.ui.view">
            <field name="name">soya.bank.reconciliation.tree</field>
            <field name="model">soya.bank.reconciliation</field>
            <field name="arch" type="xml">
                <tree string="Réconciliations Bancaires" decoration-success="state == 'validated'" decoration-warning="state == 'reconciled'">
                    <field name="name"/>
                    <field name="reconciliation_date"/>
                    <field name="bank_balance" widget="monetary"/>
                    <field name="book_balance" widget="monetary"/>
                    <field name="difference" widget="monetary"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_bank_reconciliation_form" model="ir.ui.view">
            <field name="name">soya.bank.reconciliation.form</field>
            <field name="model">soya.bank.reconciliation</field>
            <field name="arch" type="xml">
                <form string="Réconciliation Bancaire">
                    <header>
                        <button name="action_reconcile" type="object" string="Rapprocher" invisible="state != 'draft'" class="btn-primary"/>
                        <button name="action_validate" type="object" string="Valider" invisible="state != 'reconciled'" class="btn-success"/>
                        <button name="action_cancel" type="object" string="Annuler" invisible="state in ['cancelled','validated']" class="btn-danger"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,reconciled,validated,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Informations">
                                <field name="reconciliation_date" required="1"/>
                                <field name="bank_statement_date" required="1"/>
                            </group>
                            <group string="Soldes">
                                <field name="bank_balance" widget="monetary" required="1"/>
                                <field name="book_balance" widget="monetary" readonly="1"/>
                                <field name="difference" widget="monetary" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                        </group>

                        <group string="Paiements Rapprochés">
                            <field name="payment_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="payment_date"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>

                        <notebook>
                            <page string="Notes">
                                <field name="notes" nolabel="1" placeholder="Notes de rapprochement..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bank_reconciliation" model="ir.actions.act_window">
            <field name="name">Réconciliation Bancaire</field>
            <field name="res_model">soya.bank.reconciliation</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
